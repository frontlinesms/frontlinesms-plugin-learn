<tab name="tbManageTopics" text="i18n.plugins.learn.topic.tab.title">
	<panel columns="2" weightx="1" weighty="1" gap="8" left="8" right="8" top="8" bottom="8">
		<tree name="trTopics" weightx="1" weighty="1"
				colspan="2"
				action="treeItemSelected"
				expand="trTopics_expand(this)"
				perform="editSelectedTreeItem"/>
				
		<panel halign="left" gap="8">
			<button name="btNewTopic" action="newTopic" text="i18n.plugins.learn.topic.new" icon="/icons/plugins/learn/add.png"/>
			<button name="btNewReinforcement" action="newReinforcement" text="i18n.plugins.learn.reinforcement.new" icon="/icons/plugins/learn/add.png"/>
			<button name="btNewQuestion" action="newQuestion" text="i18n.plugins.learn.question.new" icon="/icons/plugins/learn/add.png"/>
		</panel>
		
		<panel halign="right" gap="8">
			<button name="btEditTreeItem" action="editSelectedTreeItem"
					enabled="false"
					icon="/icons/edit.png"
					text="i18n.action.edit"/>
			<button name="btDeleteTreeItem" action="deleteSelectedTreeItem"
					enabled="false"
					icon="/icons/delete.png"
					text="i18n.action.delete"/>
		</panel>
	</panel>
</tab>