<tab name="tbGradebook" text="i18n.plugins.learn.gradebook.tab.title">
	<panel columns="2" weightx="1" weighty="1" gap="8" left="8" right="8" top="8" bottom="8">
		<label text="i18n.plugins.learn.assessment.class"/>
		<panel gap="8">
			<textfield name="tfClass" editable="false"/>
			<button name="btSelectClass" action="selectGroup" icon="/icons/group.png"/>
		</panel>
		
		<label text="i18n.plugins.learn.topic"/>
		<combobox name="cbTopic" text="i18n.plugins.learn.topic.all"
				action="topicSelected"
				editable="false" enabled="false"/>
		
		<label text="i18n.plugins.learn.assessment"/>
		<combobox name="cbAssessment"
				action="assessmentSelected"
				editable="false" enabled="false"/>
		
		<table name="tbGrades" weightx="1" weighty="1" colspan="2">
			<header>
				<column text="i18n.plugins.learn.student"/>
			</header>
		</table>
	</panel>
</tab>
