<dialog name="dgEditAssessmentMessage" columns="2" gap="8" close="close" text="i18n.plugins.learn.frequency.once" left="8" right="8" top="8" bottom="8" modal="true">
	<label text="i18n.plugins.learn.message.summary" valign="top"/>
	<textarea name="taSummary" editable="false"/>
	
	<label text="i18n.plugins.learn.message.date.start"/>
	<panel name="pnStartDate">
		<textfield name="tfStartYear"/>
		<textfield name="tfStartMonth"/>
		<textfield name="tfStartDayOfMonth"/>
		<textfield name="tfStartHour"/>
		<textfield name="tfStartMinute"/>
	</panel>
	
	<label text="i18n.plugins.learn.message.repeat"/>
	<combobox name="cbRepeat" editable="false" text="i18n.plugins.learn.frequency.once">
		<choice text="i18n.plugins.learn.frequency.once"/>
		<choice text="i18n.plugins.learn.frequency.daily"/>
		<choice text="i18n.plugins.learn.frequency.weekly"/>
		<choice text="i18n.plugins.learn.frequency.monthly"/>
	</combobox>
	
	<label text="i18n.plugins.learn.message.date.end"/>
	<panel name="pnEndDate">
	</panel>
	
	<panel colspan="2" columns="2" gap="8" halign="center">
		<button name="btSave" text="i18n.action.save" icon="/icons/tick.png" action="save"/>
		<button name="btCancel" text="i18n.action.cancel" icon="/icons/cross.png" action="close"/>
	</panel>
</dialog>