		left="8" right="8" top="8" bottom="8">
	<label text="i18n.plugins.learn.settings.resend.delay" valign="top"/>
	<textfield name="tfResendDelay" action="settingChanged(this.name, this.text)"/>
	
	<label text="i18n.plugins.learn.settings.response.correct" valign="top"/>
	<textarea name="taCorrectResponse" action="settingChanged(this.name, this.text)" weightx="1"/>
	
	<label text="i18n.plugins.learn.settings.response.incorrect" valign="top"/>
	<textarea name="taIncorrectResponse" action="settingChanged(this.name, this.text)" weightx="1"/>
